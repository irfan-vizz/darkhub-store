<h1>Drak Hub</h1>
<section class=" bannerCarousel owl-carousel owl-theme">
  {% for block in section.blocks %}
    <div class="item">
      <div class="topBannar">
        {{ block.settings.image | image_url: width: 2000 | image_tag: class: 'bgImg' }}
        <div class="topBnannarInner">
          <div class="container">
            <h1>{{ block.settings.slideTitle }}</h1>
            <a href="#">SHOP ></a>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</section>
{% schema %}
  {
    "name": "banner",
    "tag": "section",
    "class": "banner",
    "max_blocks": 5,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Slideshow"
      }
    ],
    "blocks": [
      {
        "name": "Slide",
        "type": "slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "slideTitle",
            "label": "Slidetitle"
          }, {
            "type": "url",
            "id": "slideButton",
            "label": "Slidebutton"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "banner",
        "category": "Custom"
      }
    ]
  }
{% endschema %}